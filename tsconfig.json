{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "removeComments": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,

    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],

    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
